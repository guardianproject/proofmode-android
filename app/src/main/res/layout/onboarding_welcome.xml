<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/llRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center_horizontal"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/onboarding_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_img_home_off" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/OnboardingIntroSubtitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/title"
                style="@style/OnboardingIntroTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/onboarding_intro_title" />

            <TextView
                android:id="@+id/content"
                style="@style/OnboardingIntroContentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/onboarding_intro_content" />

            <TextView
                android:id="@+id/btnLearnMore"
                style="@style/OnboardingIntroSubtitleStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/onboarding_learn_more" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="?attr/actionBarSize">

                <Button
                    android:id="@+id/btnNext"
                    style="@style/OnboardingButtonWhiteStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="@string/onboarding_get_started" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
